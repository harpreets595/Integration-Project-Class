@model IEnumerable<BikeShop.Models.BikeListModel>

@{
    ViewData["Title"] = "Mountain Bikes";
}

<h1>Mountain Bike Model List</h1>

<table class="table">
    <tbody>
       @foreach (var item in Model)
        {
            <tr>
                <td><img style="width:250px" src="~/Mountain Bikes/Models/@item.ProductModel .png" onerror="this.onerror=null; this.src='TODO.png'" alt="@Html.DisplayFor(modelItem => item.ProductModel)" /></td>
                <td>
                    <div>
                        @Html.ActionLink(item.ProductModel, "Details", new { id = item.ProductModelID })
                        <p>@item.Description </p>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>